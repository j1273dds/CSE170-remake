<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <link rel="stylesheet" href="css/bootstrap-theme.css" />
        <link rel="stylesheet" href="css/bootstrap.css" />
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link href="css/account.css" rel="stylesheet" />
        <script src="js/post.js"></script>
        <script src="js/introHCI.js"></script>
    </head>

    <body>
        <div class="top">
            <p class="logo" style="float: left;">Find and Seek</p>
        </div>
        {{#each account}}
        <div class="img">
            <img src="{{image}}" class="img-responsive" />
        </div>
        <div class="accinfo1">
            <h1>{{username}}</h1>
            <h2 for="email">{{email}}</h2>
        </div>
        {{/each}}
        <div class="accinfo2">
            <label for="lost">My Lost Items:</label>
            <div class="lostPost">
                {{#each lostposts}}
                <div class="individual">
                    <img src="{{image}}" class="img-responsive" />
                    <h1>{{name}}</h1>
                    <p>Description: {{description}}</p>
                    <span id="moreText">
                        <p>Last Seen: {{lastseen}}</p>
                        <p>Date: {{date}}</p>
                    </span>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="accinfo2">
            <label for="lost">My Found Items:</label>
            <div class="lostPost">
                {{#each foundposts}}
                <div class="individual">
                    <img src="{{image}}" class="img-responsive" />
                    <h1>{{name}}</h1>
                    <p>Description: {{description}}</p>
                    <span id="moreText">
                        <p>Last Seen: {{lastseen}}</p>
                        <p>Date: {{date}}</p>
                    </span>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="logout">
            <button type="submit" onclick="window.location.href = '/';">Logout</button>
        </div>

        <div class="bottom">
            <button type="button" onclick="home()">
